<!DOCTYPE html>
<html lang="en">
    <%- include('head') %>
<body>
    <%- include('navbar') %>
    <form action="/insert" method="post" enctype="multipart/form-data">
    <div class="container my-4">
        <div class="row ">
          <div class="col-sm-8 bg-light py-5 px-5">
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Title</label>
                <input type="text" class="form-control" name="title"id="exampleFormControlInput1" placeholder="Assignment Title" required>
              </div>
              <div class="mb-3">
                <label for="exampleFormControlTextarea1" class="form-label">Detail</label>
                <textarea class="form-control" name="detail" id="exampleFormControlTextarea1" rows="10" placeholder="Assignment Detail"></textarea>
              </div>
             
                <div class="mb-3">
                    <label for="formFile" class="form-label">Add File</label>
                    <input class="form-control " type="file" name="file" id="formFile" required>
                  </div>
              
          </div>
          <div class="col-sm-4 bg-light py-5 px-5 d-flex flex-column  justify-content-between  align-items-center">
            <div >
                <div class="mb-3">
                  <label for="exampleFormControlInput1" class="form-label">Point</label>
                  <input type="number" class="form-control" name="score" id="exampleFormControlInput1" placeholder="100" min="0" max="100" required>
                </div>
                <div class="mb-3">
                  <label for="exampleFormControlTextarea1" class="form-label">Due</label>
                  <input type="datetime-local" id="birthdaytime" class="form-control"  name="date" required>
                </div>
            </div>
              <button type="submit" class="btn  mb-3 w-50 color_theme text-white">Submit</button>
          </div>
        </div>
      
      </div>
    </form>
</body>
</html>